<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Recipes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:colorBackground">@color/green_light</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogChangeProfileTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorBackground">@color/full_transparent</item>
        <item name="android:windowBackground">@color/full_transparent</item>
        <item name="android:background">@color/full_transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="FabTheme" parent="Theme.AppCompat">
        <item name="colorSecondary">@color/green_for_button</item>
    </style>

    <style name="CheckBoxTheme" parent="Theme.AppCompat">
        <item name="android:textColorSecondary">@color/red</item>
    </style>

    <style name="Theme.Recipes.MaterialCardView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="DetailTheme" parent="Theme.AppCompat">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <!-- Theme Splash Android <12-->
    <style name="SplashTheme" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">@color/green_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/recipe_anim_05_160_124</item>
        <item name="windowSplashScreenAnimationDuration">100</item>
        <item name="postSplashScreenTheme">@style/Theme.Recipes.MaterialCardView</item>

    </style>

    <style name="ImageButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="colorOnBackground">@color/green_light</item>
    </style>

    <style name="BackgroundForSearchEditText" parent="Theme.AppCompat">
        <item name="android:background">@drawable/background_edit_text_light</item>
        <item name="android:textColorHint">@color/olive</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>
</resources>